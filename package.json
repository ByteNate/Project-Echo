{
    "name": "project-echo",
    "version": "1.0.0",
    "description": "This system is engineered for dynamic resource alignment and contingency planning.",
    "main": "index.js",
    "scripts": {
        "start": "node backend/src/app.js",  // Correct if app.js is your backend entry point
        "dev": "nodemon backend/src/app.js", // Changed to reflect the actual path if app.js is the entry
        "build": "cd client && npm run build", // Correct, assumes npm run build is set in the client's package.json
        "client": "cd client && npm start", // Correct, starts the frontend development server
        "server": "nodemon backend/src/app.js", // Changed to reflect the actual path
        "dev:client": "cd client && npm run dev", // Correct, check if 'npm run dev' is defined in client's package.json
        "dev:server": "nodemon backend/src/app.js", // Ensure this path is correct
        "dev:concurrent": "concurrently \"npm run dev:server\" \"npm run dev:client\"" // Correct, uses concurrently to run both
    },    
    "repository": {
        "type": "git",
        "url": "https://github.com/ByteNate/Project-Echo"
    },
    "author": "ByteNate",
    "license": "GPL-3.0",
    "dependencies": {
        "axios": "^1.6.8",
        "bcrypt": "^5.0.1",
        "concurrently": "^7.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
        "joi": "^17.13.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.3.1",
        "morgan": "^1.10.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "eslint": "^9.2.0",
        "nodemon": "^2.0.15"
    }
}
